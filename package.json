{
    "name": "fthtml",
    "displayName": "ftHTML",
    "version": "2.1.2",
    "description": "An HTML preprocesser built to cut down on special characters/tags and typing. Incorporates importing other .ftHTML files, basic variables and is not whitespace specific. Includes a CLI",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "fthtml",
        "ftHTML",
        "HTML",
        "preprocessor",
        "variables",
        "cli",
        "template",
        "binding"
    ],
    "bin": {
        "fthtml": "cli/bin/fthtml"
    },
    "homepage": "https://fthtml.com",
    "repository": "https://github.com/soulshined/fthtml",
    "author": "David Freer <davidwfreer@pm.me> (https://davidfreer.me)",
    "license": "GPL-3.0-or-later",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc && cd ./cli && tsc",
        "test": "mocha  --recursive \".dev/tests/**/*.js\"",
        "test:attributes": "mocha .dev/tests/parser/attributes --recursive --reporter spec",
        "test:comments": "mocha .dev/tests/parser/comments --recursive --reporter spec",
        "test:elangs": "mocha .dev/tests/parser/elangs --recursive --reporter spec",
        "test:keywords": "mocha .dev/tests/parser/keywords --recursive --reporter spec",
        "test:tagnames": "mocha .dev/tests/parser/tagnames --recursive --reporter spec",
        "test:pragmas": "mocha .dev/tests/parser/pragmas --recursive --reporter spec",
        "test:variables": "mocha .dev/tests/parser/variables --recursive --reporter spec",
        "test:string-interpolation": "mocha .dev/tests/parser/string-interpolation --recursive --reporter spec",
        "test:self-closing-tags": "mocha .dev/tests/parser/self-closing-tags --recursive --reporter spec",
        "test:strings": "mocha .dev/tests/parser/strings --recursive --reporter spec"
    },
    "dependencies": {
        "glob": "^7.1.6",
        "minimist": "1.2.0"
    },
    "devDependencies": {
        "@types/node": "^13.1.2",
        "chai": "^4.2.0",
        "mocha": "^6.2.2",
        "sinon": "^7.5.0"
    }
}